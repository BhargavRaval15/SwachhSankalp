<%- include('../partials/header') %>

<h2 class="create-blog-title">Create New Blog Post</h2>

<form class="create-blog-form" action="/blogs" method="POST">
  <div class="form-group">
    <label for="title" class="form-label">Title</label>
    <input type="text" name="title" id="title" class="form-input" required />
  </div>
  <div class="form-group">
    <label for="content" class="form-label">Content</label>
    <textarea
      name="content"
      id="content"
      class="form-textarea"
      required
    ></textarea>
  </div>
  <div class="form-group">
    <label for="author" class="form-label">Author</label>
    <input type="text" name="author" id="author" class="form-input" required />
  </div>
  <button type="submit" class="submit-btn">Create Blog Post</button>
</form>

<%- include('../partials/footer') %>
