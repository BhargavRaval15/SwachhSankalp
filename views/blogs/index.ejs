<%- include("../partials/portal-header") %>

<section class="feature-section">
  <h2 class="feature-title">Blogs</h2>
  <a href="/blogs/new" class="new-btn">Create New Blog</a>

  <ul class="blogs-list">
    <% blogs.forEach(function(blog){ %>
    <li class="blog-item">
      <a href="/blogs/<%= blog._id %>" class="blog-link"><%= blog.title %></a>
      <p class="blog-description"><%= blog.description %></p>
    </li>
    <% }) %>
  </ul>
</section>

<%- include("../partials/portal-footer") %>
